<h1 class="font-bold w-full text-center m-5">USERS</h1><br>
<div class="container w-11/12 mx-auto">
<% @users.each do |person| %>
 <div class="user-card flex bg-white p-5 rounded-lg">
    <div class="user-photo border-2 w-36 h-24 mx-5"></div>
 <div class="w-full flex items-center content-center flex-wrap">
    <div class="text-3xl ml-5 w-full"><%= link_to "#{person.name}", user_path(person.id), class: 'link' %></div>
    <span class="text-base w-full text-right mr-5">Number of posts: <%= person.posts.count%></span>
</div>
 </div><br>
<% end %>
</div>
